<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsInfo3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Details of speaker"
        android:textColor="#ff43"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textStyle="italic"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:orientation="horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/objImg1"
                android:layout_width="359dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/objImg2"
                android:layout_width="376dp"
                android:layout_height="335dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/objImg3"
                android:layout_width="376dp"
                android:layout_height="335dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/objImg4"
                android:layout_width="376dp"
                android:layout_height="335dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

        </LinearLayout>

    </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Owner Address: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: #44, 2nd cross, 3rd main road, jp nagar 7th phase, near Narayana college"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Item Model/Brand: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: #44, 2nd cross, 3rd main road, jp nagar 7th phase, near Narayana college"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Item color: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: #44, 2nd cross, 3rd main road, jp nagar 7th phase, near Narayana college"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Item Meterial: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportMeteral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg :50,000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Item Sports Name: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg :50,000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Advance: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportAdvance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg :50,000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter all the Item you will provide in pack: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg :50,000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Rent: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: 10,000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="This Item Idel for:"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportIdel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: 10,000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Owner Area: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: JP NAGAR"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter short Description on Sporst "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/SportDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: house is a single-unit residential building. It may range in complexity from a rudimentary hut to a complex structure of wood, masonry, concrete or other material, outfitted with plumbing, electrical, and heating, ventilation, and air conditioning systems."
            />

        <Button
            android:id="@+id/NextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_margin="15dp"
            android:layout_marginBottom="50dp"
            />
    </LinearLayout>

</ScrollView>