<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".serviceInfo3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Service"
            android:textColor="#ff43"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:textStyle="italic"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="334dp"
            android:orientation="horizontal"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/objImg1"
                    android:layout_width="359dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:id="@+id/objImg2"
                    android:layout_width="376dp"
                    android:layout_height="335dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:id="@+id/objImg3"
                    android:layout_width="376dp"
                    android:layout_height="335dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:id="@+id/objImg4"
                    android:layout_width="376dp"
                    android:layout_height="335dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

            </LinearLayout>

        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter your Name: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter your Address: "
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: #44, 2nd cross, 3rd main road, jp nagar 7th phase, near Narayana college"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter your Experience: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Select workers "
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <Spinner
                android:id="@+id/BhkSpinner"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Charge: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Area: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: JP NAGAR"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter your working Time: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/workingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter Langauge Known: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter your Ardhar Num: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Ardhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Enter your Description: "
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <EditText
            android:id="@+id/Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Eg: Shree"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp">


            <Button
                android:id="@+id/Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="130dp"
                android:text="Upload Data"
                />


        </LinearLayout>
    </LinearLayout>


</ScrollView>